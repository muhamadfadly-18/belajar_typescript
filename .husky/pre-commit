echo 'Pre-commit checks passed.'

yarn run  check-format||{
    echo 'Code format check failed. Please run "yarn run format" to fix formatting issues.'
    false;
}
#check Eslint standard
yarn run check-lint||{
    echo 'ESLint check failed. Please fix the linting issues.'
    false;
}

#build
yarn run build||{
    echo 'Build failed. Please fix the build issues.'
    false;
}